<header id="head" class="secondary"></header>
<div class="container">
	
	
	<div class="row"> 
		
			<article>
				<header class="page-header">
					<h1 class="page-title">{{data.product.name}}</h1>
				</header>	
				<div class="col-md-6 col-lg-6">
						<div id="myCarousel" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							{{#if data.product.images}}
								{{#each data.product.images}}
						 			<li data-target="#myCarousel"></li>
    							{{/each}}	
							{{/if}}	
  						</ol> 
						<div class="carousel-inner" role="listbox">
							 	{{#if data.product.images}}
									{{#each data.product.images}}
										{{#ifeq @index 0}}
										<div class="item active">
											<img src="{{cloudinaryUrl}}" alt="imagen"> 
										</div>
										{{else}}
											<div class="item">
      											<img src="{{cloudinaryUrl}}" alt="imagen">
											</div>
										{{/ifeq}}
									{{/each}}	  
								{{/if}}	
						</div>
					 		<a class="left carousel-control" href="#myCarousel" data-slide="prev">
    							<span class="glyphicon glyphicon-chevron-left"></span>
    							<span class="sr-only">Previous</span>
  							</a>
  							<a class="right carousel-control" href="#myCarousel" data-slide="next">
    							<span class="glyphicon glyphicon-chevron-right"></span>
    							<span class="sr-only">Next</span>
  							</a>
					  
					</div>
					<div class="row">
						{{#if data.product.images}}
							{{#each data.product.images}}
								<a id="myBtn" href="javascript:void(0)" onclick="$('#myCarousel').carousel({{@index}})"><img src="{{cloudinaryUrl width='120' height='120' }}" alt="imagen"></a>
							{{/each}}	  
						{{/if}}	
					</div>
				
				</div>	
			</article>
			<aside>
				<div class="col-md-6 col-lg-6"></div>
					<div class="col-md-4 col-lg-4">
						<div class="wpb_wrapper well">
							{{{data.product.description}}}
						</div>
					</div>
					<div class="col-md-2 col-lg-2">
						<h4> Descargas</h4>
						{{#ifeq data.product.pdfManual.filename null}}
							{{else}}
								<a href="{{fileUrl data.product.pdfManual.filename}}" download="Manual.pdf">Manual</a>
						{{/ifeq}}
						{{#ifeq data.product.pdfInstall.filename null}}
							{{else}}
								<a href="{{fileUrl data.product.pdfInstall.filename}}" download="Instalacion.pdf">Instalación</a>
						{{/ifeq}}
						{{#ifeq data.product.pdfCatalog.filename null}}
							{{else}}
								<a href="{{fileUrl data.product.pdfCatalog.filename}}" download="Catalogo.pdf">Catálogo</a>
						{{/ifeq}}
					</div>
				</div>
			</aside>	 
	</div>	
</div>		 
<script>
	$(document).ready(function(){
		// Activate Carousel
		$("#myCarousel").carousel("pause");
		  
  		// Enable Carousel Controls
  			$(".left").click(function(){
    			$("#myCarousel").carousel("prev");
  			});
  			$(".right").click(function(){
    			$("#myCarousel").carousel("next");
  			});
					  
		});
</script>